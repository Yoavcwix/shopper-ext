{
  "manifest_version": 3,
  "name": "Shopper Assistant",
  "version": "1.0.0",
  "description": "AI-powered shopping assistant that finds better deals",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.ebay.com/*",
    "https://*.bestbuy.com/*",
    "https://*.temu.com/*",
    "https://*.aliexpress.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Find better deals"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*/dp/*",
        "https://*.amazon.co.uk/*/dp/*",
        "https://*.ebay.com/itm/*",
        "https://*.bestbuy.com/site/*",
        "https://*.temu.com/*",
        "https://*.aliexpress.com/item/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
